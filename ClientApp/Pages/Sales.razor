@page "/sales"
@inject HttpClient Http
@layout MainLayout;
@using System;


<h2>Sales Ledger</h2>

@if (sales == null)
{
    <p>Loading...</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Date</th>
                <th>Product</th>
                <th>Qty</th>
                <th>Tax Location</th>
                <th>Shipment</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var s in sales)
            {
                <tr>
                    <td>@s.Date.ToShortDateString()</td>
                    <td>@s.Product?.Name</td>
                    <td>@s.Quantity</td>
                    <td>@s.TaxLocation</td>
                    <td>@s.ShipmentType</td>
                    <td>@s.Total</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<SalesRecord>? sales;

    protected override async Task OnInitializedAsync()
    {
        sales = await Http.GetFromJsonAsync<List<SalesRecord>>("api/sales");
    }
}




